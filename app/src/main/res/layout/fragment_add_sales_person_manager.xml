<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg_navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AddSalesPersonManagerFragment">

    <ScrollView
        android:id="@+id/scrollView_addSalesPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/titleAddSalesPerson_rl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/title_bg">

                <TextView
                    android:id="@+id/titleAddSalesPerson_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Sales Person"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/addSalesPersonDetails_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                >
                <RelativeLayout
                    android:id="@+id/addSalesPersonDetails_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/nameAddSalesPersonDetails_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/nameAddSalesPersonDetailsHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <EditText
                            android:id="@+id/nameAddSalesPersonDetails_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameAddSalesPersonDetailsHeading_tv"
                            android:textColor="@android:color/black"
                            android:hint="Name"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@android:color/transparent"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowNameAddSalesPerson"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/nameAddSalesPersonDetails_rl"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <RelativeLayout
                        android:id="@+id/emailAddSalesPersonDetails_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separatorBelowNameAddSalesPerson"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/emailAddSalesPersonDetailsHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <EditText
                            android:id="@+id/emailAddSalesPersonDetails_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/emailAddSalesPersonDetailsHeading_tv"
                            android:textColor="@android:color/black"
                            android:hint="Email"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@android:color/transparent"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowEmailAddSalesPerson"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/emailAddSalesPersonDetails_rl"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <RelativeLayout
                        android:id="@+id/mobileAddSalesPersonDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emailAddSalesPersonDetails_rl"
                        android:layout_weight="4.5">

                        <TextView
                            android:id="@+id/mobileAddSalesPersonDetailHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Mobile"
                            android:textColor="@color/textcolor"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/mobileAddSalesPersonDetails_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobileAddSalesPersonDetailHeading_tv"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="Mobile No"
                            android:inputType="phone"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowMobileAddSalesPersonDetail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/mobileAddSalesPersonDetail_rl"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <RelativeLayout
                        android:id="@+id/statusAddSalesPersonDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separatorBelowMobileAddSalesPersonDetail"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/statusAddSalesPersonDetailHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <Spinner
                            android:id="@+id/statusAddSalesPersonDetail_sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/statusAddSalesPersonDetailHeading_tv"
                            android:textColor="@android:color/black"
                            android:hint=""
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowStatusAddSalesPersonDetail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/statusAddSalesPersonDetail_rl"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <RelativeLayout
                        android:id="@+id/dojAddSalesPersonDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separatorBelowStatusAddSalesPersonDetail"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/dojSalesPersonDetailHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOJ"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <TextView
                            android:id="@+id/dojAddSalesPersonDetail_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dojSalesPersonDetailHeading_tv"
                            android:textColor="@android:color/black"
                            android:hint="doj"
                            android:textSize="14sp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowDojAddSalesPersonDetail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/dojAddSalesPersonDetail_rl"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <RelativeLayout
                        android:id="@+id/passwordAddSalesPersonDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separatorBelowDojAddSalesPersonDetail"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/passwordAddSalesPersonDetailHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <EditText
                            android:id="@+id/passwordAddAddSalesPersonDetails_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/passwordAddSalesPersonDetailHeading_tv"
                            android:textColor="@android:color/black"
                            android:hint="***"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:inputType="textPassword"
                            />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/submitAddSalesPersonManager_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:layout_below="@+id/passwordAddSalesPersonDetail_rl"
                        android:background="@color/active_bg"
                        android:textColor="@android:color/white"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/addSalesPersonMessage_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            >

        <RelativeLayout
            android:id="@+id/addSalesPersonMessage_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addSalespersonMessage_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maximum User Limit Reached. Please Update Your Package."
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:textColor="@color/textcolor"

                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>