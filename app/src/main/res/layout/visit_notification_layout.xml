<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/viewRequestNotificationDetails_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/viewRequestNotificationDetail_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/visitStatusRequestNotification_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reassign"
                android:textSize="14sp"
                android:padding="10dp"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/visitStatusDateRequestNotification_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="2018-09-8"
                android:textColor="@color/textcolor"
                android:padding="10dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/requestByStatusRequestNotification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="RequestBy"
                android:textColor="@color/textcolor"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/visitStatusRequestNotification_tv"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
