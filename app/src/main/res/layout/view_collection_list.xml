<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/collectionDetails_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/collectionPerson_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/dateCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/dateCollectionHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/dateValueCollection_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="01 August, 2018"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/dateCollectionHeading_tv"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/salesPersonCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/salesPersonCollectionHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Person"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/salesPersonValueCollection_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Shalu Dhochak"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/salesPersonCollectionHeading_tv"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/plusMinusCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"

                >
                <ImageView
                    android:id="@+id/deleteCollection_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus_color_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    />

                <ImageView
                    android:id="@+id/plusCollection_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus_color_icon"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/deleteCollection_iv"
                    />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
                android:id="@+id/viewCollectionDetails_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/collectionDetails_cv"
                >
                <RelativeLayout
                    android:id="@+id/viewCollectionDetail_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/dateViewCollection_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:id="@+id/dateViewCollection_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/green_box_bg"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/dateViewCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:layout_centerHorizontal="true"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="2dp"
                                />

                            <TextView
                                android:id="@+id/dateViewCollection_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01 August, 2018"
                                android:textColor="@android:color/white"
                                android:textSize="14dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/dateViewCollectionHeading_tv"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/salesPersonCollectionDetail_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/green_box_bg"
                            >
                            <TextView
                                android:id="@+id/salesPersonCollectionDetailHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sales Person"
                                android:layout_centerHorizontal="true"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="2dp"
                                />

                            <TextView
                                android:id="@+id/salesPersonValueCollectionDetail_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shalu Dhochak"
                                android:textColor="@android:color/white"
                                android:textSize="14dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/salesPersonCollectionDetailHeading_tv"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/editMinusViewCollection_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@color/green_box_bg">

                            <ImageView
                                android:id="@+id/deleteViewCollection_iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/minus_white_icon"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="3dp"
                                />

                            <ImageView
                                android:id="@+id/minusViewCollection_iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/minus_white_icon"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/deleteViewCollection_iv"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/nameViewCollectionDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dateViewCollection_ll"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/nameViewLeadHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales Person"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <TextView
                            android:id="@+id/nameViewLead_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameViewLeadHeading_tv"
                            android:textColor="@android:color/black"
                            android:text="Shalu Dhochak"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowName"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/nameViewCollectionDetail_rl"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <RelativeLayout
                        android:id="@+id/totalCollectionViewCollection_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separatorBelowName"
                        android:layout_weight="4.5"
                        >

                        <TextView
                            android:id="@+id/totalCollectionViewCollectionHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Collection"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="2dp"
                            android:textSize="12dp"
                            android:textColor="@color/textcolor"
                            />

                        <TextView
                            android:id="@+id/totalCollectionViewCollection_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/totalCollectionViewCollectionHeading_tv"
                            android:textColor="@android:color/black"
                            android:text="25000"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separatorBelowTotalCollection"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/textcolor"
                        android:layout_below="@+id/totalCollectionViewCollection_rl"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


</RelativeLayout>
