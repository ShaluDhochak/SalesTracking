<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/collectionDetails_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/collectionPerson_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/dateCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/dateCollectionHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/dateValueCollection_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="01 August, 2018"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp"
                    android:layout_below="@+id/dateCollectionHeading_tv"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/salesPersonCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/salesPersonCollectionHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Collection"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/salesPersonValueCollection_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="00"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp"
                    android:layout_below="@+id/salesPersonCollectionHeading_tv"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/plusMinusCollection_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/deleteCollection_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/delete"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    />

                <ImageView
                    android:id="@+id/plusCollection_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plus_color_icon"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/deleteCollection_iv"
                    />

            </RelativeLayout>


        </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
