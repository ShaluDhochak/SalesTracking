<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/advanceSearchReport_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/advanceSearchReport_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/employeeAdvanceSearchReport_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/employeeAdvanceSearchReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <Spinner
                    android:id="@+id/employeeAdvanceSearchReport_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/employeeAdvanceSearchReportHeading_tv"
                    android:textColor="@android:color/black"
                    android:hint=""
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBelowEmployeeAdvanceSearchReport"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textcolor"
                android:layout_below="@+id/employeeAdvanceSearchReport_rl"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <RelativeLayout
                android:id="@+id/fromdateAdvanceSearchReport_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowEmployeeAdvanceSearchReport"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/fromdateAdvanceSearchReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Date"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/fromdateAdvanceSearchReportDetail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="from date"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/fromdateAdvanceSearchReportHeading_tv"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/separatorBelowFromdateAdvanceSearchReport"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textcolor"
                android:layout_below="@+id/fromdateAdvanceSearchReport_rl"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <RelativeLayout
                android:id="@+id/todateAdvanceSearchReport_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowFromdateAdvanceSearchReport"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/todateAdvanceSearchReportHeading_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Date"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/todateAdvanceSearchReport_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="To Date"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/todateAdvanceSearchReportHeading_tv"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/submitAdvanceSearchReport_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_below="@+id/todateAdvanceSearchReport_rl"
                android:background="@color/active_bg"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
