<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile_icon"
        />

    <LinearLayout
        android:id="@+id/details_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/pic"
        android:layout_centerVertical="true"
        >
        <RelativeLayout
            android:id="@+id/details_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="Name :"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:hint="name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/nameHeading"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addressDetails_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addressHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="Designation :"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/addressDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/addressHeading"
                android:hint="designation "
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
         />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contactDetails_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contactHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="Contact :"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/contactDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="contact"
                android:layout_toRightOf="@+id/contactHeading"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>