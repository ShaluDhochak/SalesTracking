<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/viewCollectionManagerDetails_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        >
        <RelativeLayout
            android:id="@+id/viewCollectionManagerDetail_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dateViewManagerCollection_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/dateViewManagerCollection_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green_box_bg"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/dateViewManagerCollectionHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        />

                    <TextView
                        android:id="@+id/dateViewManagerCollection_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 August, 2018"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:layout_below="@+id/dateViewManagerCollectionHeading_tv"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/totalCollectionManagerViewCollection_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green_box_bg"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/totalCollectionManagerViewCollectionHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Collection"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="2dp"
                        />

                    <TextView
                        android:id="@+id/totalCollectionManagerViewCollection_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textSize="14dp"
                        android:layout_below="@+id/totalCollectionManagerViewCollectionHeading_tv"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/editMinusManagerViewCollection_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:background="@color/green_box_bg">

                    <ImageView
                        android:id="@+id/deleteManagerViewCollection_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/minus_white_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/minusManagerViewCollection_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/minus_white_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/deleteManagerViewCollection_iv"
                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/nameViewManagerCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateViewManagerCollection_ll"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/nameViewManagerLeadHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Person"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/nameViewManagerLead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameViewManagerLeadHeading_tv"
                    android:textColor="@android:color/black"
                    android:text="Shalu Dhochak"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBelowNameViewManagerLead"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nameViewManagerCollectionDetail_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textcolor" />

            <RelativeLayout
                android:id="@+id/clientNameManagerCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowNameViewManagerLead"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/clientNameManagerLeadHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Name"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/clientNameManagerLead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clientNameManagerLeadHeading_tv"
                    android:textColor="@android:color/black"
                    android:text="NA"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBelowClientNameManagerLead"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/clientNameManagerCollectionDetail_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textcolor" />

            <RelativeLayout
                android:id="@+id/billNoManagerCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowClientNameManagerLead"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/billNoManagerLeadHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill No"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/billNoManagerLead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/billNoManagerLeadHeading_tv"
                    android:textColor="@android:color/black"
                    android:text="NA"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBelowBillNoManagerLead"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/billNoManagerCollectionDetail_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textcolor" />

            <RelativeLayout
                android:id="@+id/collectionModeManagerCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowBillNoManagerLead"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/collectionModeManagerLeadHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collection Mode"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/collectionModeManagerLead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/collectionModeManagerLeadHeading_tv"
                    android:textColor="@android:color/black"
                    android:text="NA"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBelowCollectionModeManagerLead"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/collectionModeManagerCollectionDetail_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/textcolor" />

            <RelativeLayout
                android:id="@+id/remarkManagerCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separatorBelowCollectionModeManagerLead"
                android:layout_weight="4.5"
                >

                <TextView
                    android:id="@+id/remarkManagerLeadHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    />

                <TextView
                    android:id="@+id/remarkManagerLead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remarkManagerLeadHeading_tv"
                    android:textColor="@android:color/black"
                    android:text="NA"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>