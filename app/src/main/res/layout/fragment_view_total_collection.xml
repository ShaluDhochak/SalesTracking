<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/screen_bg_navigation"
    tools:context=".Fragment.ViewTotalCollectionFragment">

    <ScrollView
        android:id="@+id/scrollView_viewCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:id="@+id/titleViewCollection_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_bg">

        <TextView
            android:id="@+id/titleViewCollection_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Total Collection"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addTotalCollectionBox_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/addTotalCollectionDetails_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                >
            <RelativeLayout
                android:id="@+id/addTotalCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/addAmountAddTotalCollection_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    >

                    <TextView
                        android:id="@+id/addAmountAddTotalCollectionHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Collection"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"
                        />

                    <EditText
                        android:id="@+id/addAmountAddTotalCollection_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAmountAddTotalCollectionHeading_tv"
                        android:textColor="@android:color/black"
                        android:hint="00"
                        android:textSize="14sp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@android:color/transparent"
                        />

                </RelativeLayout>

                <Button
                    android:id="@+id/submitAddTotalCollection_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:layout_below="@+id/addAmountAddTotalCollection_rl"
                    android:background="@color/active_bg"
                    android:textColor="@android:color/white"
                    />
            </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/salesViewCollectionHeader_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTotalCollectionBox_rl"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewTotalCollection_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/salesViewCollectionManagerHeader_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/viewTotalManagerCollection_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/viewCollectionDetails_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:layout_below="@+id/salesViewCollectionHeader_rl"
            >
            <RelativeLayout
                android:id="@+id/viewCollectionDetail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/dateViewCollection_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:id="@+id/dateViewCollection_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green_box_bg"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/dateViewCollectionHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="2dp"
                            />

                        <TextView
                            android:id="@+id/dateViewCollection_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 August, 2018"
                            android:textColor="@android:color/white"
                            android:textSize="14dp"
                            android:layout_below="@+id/dateViewCollectionHeading_tv"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/totalCollectionViewCollection_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green_box_bg"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/totalCollectionViewCollectionHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Collection"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="2dp"
                            />

                        <TextView
                            android:id="@+id/totalCollectionViewCollection_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textColor="@android:color/white"
                            android:textSize="14dp"
                            android:layout_below="@+id/totalCollectionViewCollectionHeading_tv"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/editMinusViewCollection_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:background="@color/green_box_bg">

                        <ImageView
                            android:id="@+id/deleteViewCollection_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/minus_white_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/minusViewCollection_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/minus_white_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/deleteViewCollection_iv"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/nameViewCollectionDetail_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateViewCollection_ll"
                    android:layout_weight="4.5"
                    >

                    <TextView
                        android:id="@+id/nameViewLeadHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Person"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"
                        />

                    <TextView
                        android:id="@+id/nameViewLead_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameViewLeadHeading_tv"
                        android:textColor="@android:color/black"
                        android:text="Shalu Dhochak"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <include
            layout="@layout/collection_details_layout"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    </ScrollView>

</FrameLayout>