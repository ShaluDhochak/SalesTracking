<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg_navigation"
    tools:context=".Fragment.ViewTotalCollectionFragment">

    <ScrollView
        android:id="@+id/scrollView_viewCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/titleViewCollection_rl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/title_bg">

                <TextView
                    android:id="@+id/titleViewCollection_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="Add Total Collection"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addTotalCollectionBox_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/addTotalCollectionDetails_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/addTotalCollectionDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/clientNameAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5">

                            <TextView
                                android:id="@+id/clientNameHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Client Name"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/clientName_sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/clientNameHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:textColor="@android:color/black" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowClientNameAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor" />

                        <RelativeLayout
                            android:id="@+id/billAmountAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5">

                            <TextView
                                android:id="@+id/billNumberAddTotalCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Bill Number"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/billNumberAddTotalCollection_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/billNumberAddTotalCollectionHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="Bill Number"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowBillNumberAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor" />

                        <RelativeLayout
                            android:id="@+id/addAmountAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5">

                            <TextView
                                android:id="@+id/addAmountAddTotalCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Total Collection"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/addAmountAddTotalCollection_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addAmountAddTotalCollectionHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="00"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowTotalCollectionAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor" />

                        <RelativeLayout
                            android:id="@+id/collectionModeAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5">

                            <TextView
                                android:id="@+id/collectionModeHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Collection Mode"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <Spinner
                                android:id="@+id/collectionMode_sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/collectionModeHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:hint=""
                                android:textColor="@android:color/black" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowCollectionModeAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor" />

                        <RelativeLayout
                            android:id="@+id/chequeNumberAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/chequeNumberHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Cheque Number"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/chequeNumber_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/chequeNumberHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="Cheque Number"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowChequeNumberAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/chequeDateAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/chequeDateHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Cheque Date"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/chequeDate_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/chequeDateHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="Cheque Date"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowChequeDateAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/transactionIdAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/transactionIdHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Transaction ID"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/transactionId_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/transactionIdHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="Paytm Transaction ID"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowTransactionIdAddCustomerFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/textcolor"
                            android:visibility="gone" />


                        <RelativeLayout
                            android:id="@+id/remarksAddTotalCollection_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/collectionModeAddTotalCollection_rl"
                            android:layout_marginTop="5dp"
                            android:layout_weight="4.5">

                            <TextView
                                android:id="@+id/remarksAddTotalCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="2dp"
                                android:text="Remarks"
                                android:textColor="@color/textcolor"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/remarksAddTotalCollection_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/remarksAddTotalCollectionHeading_tv"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="Remarks"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <Button
                            android:id="@+id/submitAddTotalCollection_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/remarksAddTotalCollection_rl"
                            android:background="@color/active_bg"
                            android:text="SUBMIT"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/salesViewCollectionHeader_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addTotalCollectionBox_rl">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/viewTotalCollection_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/salesViewCollectionManagerHeader_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addTotalCollectionBox_rl"

                android:layout_marginTop="35dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/viewTotalManagerCollection_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/viewCollectionDetails_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salesViewCollectionHeader_rl"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/viewCollectionDetail_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/dateViewCollection_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:id="@+id/dateViewCollection_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/green_box_bg">

                            <TextView
                                android:id="@+id/dateViewCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="2dp"
                                android:text="Date"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/dateViewCollection_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dateViewCollectionHeading_tv"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:text="01 August, 2018"
                                android:textColor="@android:color/white"
                                android:textSize="14dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/totalCollectionViewCollection_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/green_box_bg">

                            <TextView
                                android:id="@+id/totalCollectionViewCollectionHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="2dp"
                                android:text="Total Collection"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/totalCollectionViewCollection_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/totalCollectionViewCollectionHeading_tv"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:text="00"
                                android:textColor="@android:color/white"
                                android:textSize="14dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/editMinusViewCollection_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/green_box_bg"
                            android:gravity="center|right">

                            <ImageView
                                android:id="@+id/deleteViewCollection_iv"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/minus_white_icon"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/minusViewCollection_iv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/deleteViewCollection_iv"
                                android:src="@drawable/minus_white_icon" />
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/nameViewCollectionDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dateViewCollection_ll"
                        android:layout_weight="4.5">

                        <TextView
                            android:id="@+id/nameViewLeadHeading_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="2dp"
                            android:text="Sales Person"
                            android:textColor="@color/textcolor"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/nameViewLead_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameViewLeadHeading_tv"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Shalu Dhochak"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <include
                layout="@layout/collection_details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>