<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg_navigation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.TargetFragment">

    <ScrollView
        android:id="@+id/scrollView_viewTargetPending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/titleViewTargetPending_rl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/title_bg">

                <TextView
                    android:id="@+id/titleViewTargetPending_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Target"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/viewSaleCallPendingDetails_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"
                    android:layout_below="@+id/salesCallPendingHeader_rl"
                    >
                    <RelativeLayout
                        android:id="@+id/viewSaleCallPendingDetail_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/visitPendingCountTarget_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            >

                            <TextView
                                android:id="@+id/visitPendingCountTargetHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visit Count"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="2dp"
                                android:textSize="12dp"
                                android:textColor="@color/textcolor"
                                />

                            <TextView
                                android:id="@+id/visitPendingCountTarget_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/visitPendingCountTargetHeading_tv"
                                android:textColor="@android:color/black"
                                android:hint="NA"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                />

                        </RelativeLayout>

                        <View
                            android:id="@+id/separatorBelowVisitPendingCountTarget"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/textcolor"
                            android:layout_below="@+id/visitPendingCountTarget_rl"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <RelativeLayout
                            android:id="@+id/SaleCallsPendingCountTarget_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/separatorBelowVisitPendingCountTarget"
                            android:layout_weight="4.5"
                            >

                            <TextView
                                android:id="@+id/saleCallsPendingCountTargetHeading_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sale Call"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="2dp"
                                android:textSize="12dp"
                                android:textColor="@color/textcolor"
                                />

                            <TextView
                                android:id="@+id/saleCallsPendingCountTarget_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/saleCallsPendingCountTargetHeading_tv"
                                android:textColor="@android:color/black"
                                android:hint="NA"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                />

                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>