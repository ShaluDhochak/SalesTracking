<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/visitTaskMeetingDetails_mgrhead_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/visitTaskMeetingPerson_mgrhead_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/dateVisitTaskMeeting_mgrhead_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/dateVisitTaskMeetingHeading_mgrhead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/dateValueVisitTaskMeeting_mgrhead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="01 August, 2018"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_below="@+id/dateVisitTaskMeetingHeading_mgrhead_tv"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="5dp"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/timeVisitTaskMeeting_mgrhead_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                >
                <TextView
                    android:id="@+id/timeVisitTaskMeetingHeading_mgrhead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/timeValueVisitTaskMeeting_mgrhead_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="06:00 PM"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_below="@+id/timeVisitTaskMeetingHeading_mgrhead_tv"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/plusMinusVisitTaskMeeting_mgrhead_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="right|center_vertical"
                >

                <ImageView
                    android:id="@+id/editVisitTaskMeeting_mgrhead_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/deleteVisitTaskMeeting_mgrhead_iv"
                    />

                <ImageView
                    android:id="@+id/deleteVisitTaskMeeting_mgrhead_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/delete"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/plusVisitTaskMeeting_mgrhead_iv"
                    />

                <ImageView
                    android:id="@+id/plusVisitTaskMeeting_mgrhead_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus_color_icon"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>